# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.ApplicationController.markdown
GET         /signIn                          controllers.ApplicationController.signIn
GET         /signOut                         controllers.ApplicationController.signOut
GET         /signUp                          controllers.ApplicationController.signUp

POST        /signUp                          controllers.SignUpController.signUp
POST        /authenticate                    controllers.CredentialsAuthController.authenticate

POST        /parseMarkdown                   controllers.MarkdownController.parseMarkdown
GET         /parseMarkdown/:email            controllers.MarkdownController.saveParseOperation(email: String, textToParse: String, resultHtml: String)
GET         /parseHistory                    controllers.MarkdownController.parseHistory

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
GET         /webjars/*file                   controllers.WebJarAssets.at(file)